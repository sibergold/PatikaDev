<%- include('partials/_header') -%>

<body>

  <!-- Navigation -->
  <%- include('partials/_navigation') -%>

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1 class="section-heading"><%= post.title %></h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          

          

          <p><%= post.detail %></p>

          <a href="#">
            <img class="img-fluid" src="/img/post-sample-image.jpg" alt="">
          </a>
          
           <p><%= post.dateCreated %></p>

          <p>Placeholder text by
            <a href="http://spaceipsum.com/">Space Ipsum</a>. Photographs by
            <a href="https://www.flickr.com/photos/nasacommons/">NASA on The Commons</a>.</p>
               
            <div class="clearfix">
              <a class="btn btn-primary d-block mb-2" href="/posts/edit/<%= post._id %>">Update &rarr;</a>
              <a class="btn btn-primary d-block" href="/posts/<%= post._id %>?_method=DELETE" onclick="confirm('Are you sure?')"">Delete &rarr;</a>
            </div>
            

        </div>
      </div>
    </div>
  </article>

  <hr>

   <!-- Footer -->
 <%- include('partials/_footer') -%>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
